---
import Section from "../components/Section.astro";
import { hospital } from "@data";
const { nombre, phone, email, address, city, region } = hospital;
---

<Section>
  <footer class="bottom bg-white dark:bg-gray-900">
    <div class="mx-auto w-full max-w-screen-xl p-4 py-6 lg:py-8">
      <div class="md:flex md:justify-between">
        <div class="m-4 flex md:mb-0">
          <img
            src="/public/assets/icons/HospitalLogo.svg"
            class="flex self-center w-52 h-8 me-3"
            alt="Clinica"
          />
          <span
            class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
            >{nombre}</span
          >
        </div>
        <div class="p-5 pl-12 grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
          <div>
            <h2
              class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
            >
              CONTACTO
            </h2>
            <ul class="text-gray-500 dark:text-gray-400 font-medium">
              <li class="mb-4">
                {phone}
              </li>
              <li class="mb-4">
                {email}
              </li>
            </ul>
          </div>
          <div class="pl-16 whitespace-nowrap text-gray-500 dark:text-gray-400 font-medium" >
            <ul>
              <li>&nbsp</li>
              <li>&nbsp</li>
              <li class="mb-4">
                {address}
              </li>
              <li class="mb-4">
                {city}
              </li>
            </ul>
          </div>
        </div>
      </div>
      <hr
        class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8"
      />
      <div class="sm:flex sm:items-center sm:justify-between">
        <span class="m-auto text-lg text-gray-500 sm:text-center dark:text-gray-400"
          >Â© 2024. {region}.
        </span>
      </div>
    </div>
  </footer>
</Section>
