---
import { testimonios } from "@data";
import Section from "../components/Section.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Testimonios">
  <Section>
    <div class="container">
      {
        testimonios.map(({ paciente, testimonio }) => (
          <ul class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
            <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{paciente}</h2>
            <p>{testimonio}</p>
          </ul>
        ))
      }
    </div>
  </Section>
</Layout>

<style>
  .container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin: 20px;
    justify-items: center;
    align-items: center;
  }
</style>
